# Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# Database Configuration (Neon/Vercel Postgres)
# Get these from your Neon dashboard or Vercel project settings
POSTGRES_URL="postgres://username:password@host:5432/database?sslmode=require"
POSTGRES_PRISMA_URL="postgres://username:password@host:5432/database?sslmode=require&pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NO_SSL="postgres://username:password@host:5432/database"
POSTGRES_URL_NON_POOLING="postgres://username:password@host:5432/database?sslmode=require"
POSTGRES_USER="your_postgres_username"
POSTGRES_HOST="your_postgres_host"
POSTGRES_PASSWORD="your_postgres_password"
POSTGRES_DATABASE="your_database_name"

# Vercel Blob Storage (for file uploads)
# Get these from your Vercel project settings > Storage
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_your_token_here"
BLOB_HOSTNAME="your_blob_hostname.public.blob.vercel-storage.com"

# Application Secret (for JWT tokens and encryption)
# Generate a secure random string (minimum 32 characters)
SECRET="your_super_secure_secret_key_here_minimum_32_characters"

# Google OAuth Configuration
# Get these from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID="your_google_client_id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# Email Service (Resend)
# Get this from your Resend account dashboard
RESEND_API_KEY="re_your_resend_api_key_here"

# Application URL
# Use http://localhost:3000 for development
# Use your actual domain for production
PROJECT_URL="http://localhost:3000"
